<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff">


    <LinearLayout android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text" android:textColor="#000000"
                android:id="@+id/roomTypeTextView"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/roomRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp" android:backgroundTint="#ffffff"
        android:background="#bebebe">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/basemsg_roomType"
            android:id="@+id/baseMessageTextView"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_margin="3dp"
            android:background="@android:color/holo_green_light"
            android:textColor="#ffffff"
            />
    </LinearLayout>
</LinearLayout>